{
  "name": "frc-mcap",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "module": "src/index.ts",
  "scripts": {
    "build": "wireit",
    "start": "bun run ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "wireit": "^0.14.11"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "packageManager": "bun@1.2.6",
  "wireit": {
    "build": {
      "command": "bun build --compile --minify --sourcemap --bytecode --outfile bin/frc-mcap ./src/index.ts",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "packageLocks": [
        "bun.lock"
      ],
      "output": [
        "bin/**"
      ]
    }
  },
  "dependencies": {
    "clipanion": "^4.0.0-rc.4",
    "typanion": "^3.14.0"
  }
}
