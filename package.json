{
  "name": "frc-mcap",
  "private": true,
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "build": "wireit"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "wireit": "^0.14.11"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "packageManager": "bun@1.2.6",
  "wireit": {
    "build": {
      "command": "bun build --compile --minify --sourcemap --bytecode --outfile bin/frc-mcap ./index.ts",
      "files": [
        "index.ts",
        "tsconfig.json"
      ],
      "packageLocks": [
        "bun.lock"
      ],
      "output": [
        "bin/**"
      ]
    }
  }
}
